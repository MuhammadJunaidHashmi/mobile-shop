# ===========================================
# MobileShop Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your actual values

# ===========================================
# Supabase Configuration
# ===========================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# Better Auth Configuration
# ===========================================
# Generate a secure random string for production
BETTER_AUTH_SECRET=your_super_secret_auth_key_here_minimum_32_characters
BETTER_AUTH_URL=http://localhost:3000

# ===========================================
# Social Authentication (Optional)
# ===========================================
# Google OAuth credentials (optional)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ===========================================
# Payment Gateway Configuration
# ===========================================
# PayFast Integration (Primary - South African)
PAYFAST_MERCHANT_ID=10042915
PAYFAST_MERCHANT_KEY=30xo1fgmyhdi6
PAYFAST_BASE_URL=https://sandbox.payfast.co.za
PAYFAST_PASSPHRASE=your_payfast_passphrase_here
PAYMENT_GATEWAY=payfast

# JazzCash Integration (Alternative - Pakistan)
JAZZCASH_API_KEY=your_jazzcash_api_key_here
JAZZCASH_SECRET=your_jazzcash_secret_here
JAZZCASH_MERCHANT_ID=your_jazzcash_merchant_id_here
JAZZCASH_BASE_URL=https://sandbox.jazzcash.com.pk

# Alternative Payment Gateways (Optional)
# EasyPaisa
EASYPAISA_API_KEY=your_easypaisa_api_key_here
EASYPAISA_SECRET=your_easypaisa_secret_here
EASYPAISA_MERCHANT_ID=your_easypaisa_merchant_id_here

# Bank Alfalah
BANK_ALFALAH_API_KEY=your_bank_alfalah_api_key_here
BANK_ALFALAH_SECRET=your_bank_alfalah_secret_here
BANK_ALFALAH_MERCHANT_ID=your_bank_alfalah_merchant_id_here

# Generic Payment Gateway (Fallback)
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_api_key_here
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret_here
PAYMENT_GATEWAY_MERCHANT_ID=your_merchant_id_here
PAYMENT_GATEWAY_BASE_URL=https://api.payment-gateway.pk

# ===========================================
# App Configuration
# ===========================================
# Your application URL (change for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Database Configuration (Optional)
# ===========================================
# If using direct database connection instead of Supabase
# DATABASE_URL=postgresql://username:password@localhost:5432/mobileshop

# ===========================================
# Email Configuration (Optional)
# ===========================================
# For sending order confirmations and notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ===========================================
# File Upload Configuration (Optional)
# ===========================================
# For product image uploads
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ===========================================
# Security Configuration
# ===========================================
# JWT secret for additional security
JWT_SECRET=your_jwt_secret_here

# ===========================================
# Development/Production Flags
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# ===========================================
# Analytics (Optional)
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ===========================================
# Third-party Services (Optional)
# ===========================================
# For SMS notifications
SMS_API_KEY=your_sms_api_key_here
SMS_API_URL=https://api.sms-provider.pk

# For push notifications
FCM_SERVER_KEY=your_fcm_server_key_here

# ===========================================
# Rate Limiting (Optional)
# ===========================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# ===========================================
# Logging Configuration (Optional)
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

